<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:background="@color/background_color">

        <ImageView
            android:id="@+id/img_poke_cover"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/pokeball" />

        <Button
            android:id="@+id/btn_favorite"
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/outline_star_24" />

        <TextView
            android:id="@+id/txt_poke_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_poke_cover"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txt_poke_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_poke_name"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/layout_poke_types"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_poke_id"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_poke_type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text=""
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_poke_type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text=""
                android:textColor="@color/text_color"
                android:textSize="18sp" />

        </LinearLayout>

        <View
            android:id="@+id/divider_1"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_below="@id/layout_poke_types"
            android:layout_marginVertical="8dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/layout_poke_imc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider_1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_poke_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_height"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_poke_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:text=""
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/title_poke_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_weight"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_poke_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:text=""
                android:textColor="@color/text_color"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/title_poke_abilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_poke_imc"
            android:text="@string/abilities"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layout_poke_abilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_poke_abilities"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_poke_ability0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:text=""
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_poke_ability1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:text=""
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_poke_ability2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:text=""
                android:textColor="@color/text_color"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:id="@+id/divider_2"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_below="@+id/layout_poke_abilities"
            android:layout_marginVertical="8dp"
            android:background="@android:color/darker_gray" />

        <TableLayout
            android:id="@+id/layout_poke_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider_2"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:stretchColumns="0,1,2,3,4,5">

            <TableRow android:background="@color/text_color">

                <TextView
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/background_color"
                    android:gravity="center"
                    android:text="@string/text_hp"
                    android:textColor="@color/text_color" />

                <TextView
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/background_color"
                    android:gravity="center"
                    android:text="@string/text_atk"
                    android:textColor="@color/text_color" />

                <TextView
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/background_color"
                    android:gravity="center"
                    android:text="@string/text_def"
                    android:textColor="@color/text_color" />

                <TextView
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/background_color"
                    android:gravity="center"
                    android:text="@string/text_spatk"
                    android:textColor="@color/text_color" />

                <TextView
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/background_color"
                    android:gravity="center"
                    android:text="@string/text_spdef"
                    android:textColor="@color/text_color" />

                <TextView
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/background_color"
                    android:gravity="center"
                    android:text="@string/text_speed"
                    android:textColor="@color/text_color" />

            </TableRow>

            <TableRow android:background="@color/text_color">

                <TextView
                    android:id="@+id/txt_poke_hp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/background_color"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/txt_poke_atk"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/background_color"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/txt_poke_def"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/background_color"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/txt_poke_spatk"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/background_color"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/txt_poke_spdef"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/background_color"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/txt_poke_speed"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/background_color"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/text_color" />

            </TableRow>

        </TableLayout>

    </RelativeLayout>

</LinearLayout>




