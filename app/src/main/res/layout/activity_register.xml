<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".interfaces.RegisterActivity">

    <TextView
        android:layout_marginTop="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_register_lbl"
        android:text="@string/name_lbl"
        android:textSize="@dimen/subtitle"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_register_name"
        android:layout_below="@+id/name_register_lbl"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_login_lbl"
        android:text="@string/email_lbl"
        android:textSize="@dimen/subtitle"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edit_text_register_name"
        android:layout_marginTop="@dimen/margin_top_between_components"
        />
    <EditText
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_register_email"
        android:layout_below="@+id/user_login_lbl"
        android:inputType="textEmailAddress"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password_login_lbl"
        android:text="@string/password_lbl"
        android:layout_below="@id/edit_text_register_email"
        android:textSize="@dimen/subtitle"
        android:layout_marginTop="@dimen/margin_top_between_components"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_register_password"
        android:inputType="textPassword"
        android:layout_below="@id/password_login_lbl"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_sign_up"
        android:text="@string/register"
        android:layout_below="@id/edit_text_register_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_top_between_components"/>

</RelativeLayout>